@{
ViewBag.Title = "Game Page";
}

@section Scripts{
<script src="~/js/LoadLeaderboard.js"></script>
<script src="~/js/PostScores.js"></script>
    
<script src="~/js/games/snake/libraries/p5.min.js"></script>
<script src="~/js/games/snake/fruit.js"></script>
